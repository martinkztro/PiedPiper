---
import Header from '../components/Header.astro'; 
import '../styles/historical.css';
---

<Header /> 

<div class="carousel-container">
  <div class="carousel">
    <!-- Carrusel con las imágenes -->
    <div class="carousel-item">
      <div class="top-images">
        <div class="image-item left" onclick="changeImage('ballena-jorobada')">
          <img src="/statues/ballena-jorobada.webp" alt="Estatua de la ballena jorobada" class="carousel-image" id="ballena-jorobada">
        </div>
        <div class="image-item central" onclick="changeImage('ballena-jorobada')">
          <img src="/statues/ballena-jorobada.webp" alt="Estatua de la ballena jorobada" class="carousel-image" id="ballena-jorobada">
        </div>
        <div class="image-item right" onclick="changeImage('ballena-jorobada')">
          <img src="/statues/ballena-jorobada.webp" alt="Estatua de la ballena jorobada" class="carousel-image" id="ballena-jorobada">
        </div>
      </div>
      <div class="description">
        <h3>La Ballena Jorobada</h3>
        <p><strong>Autor:</strong> Octavio Gonzalez Gutierrez</p>
        <p><strong>Material:</strong> Bronce</p>
        <p><strong></strong> 2004</p>
        <p><strong>Descripcion:</strong> Escultura que representa a la ballena jorobada, destacando el trabajo artistico y cientifico del autor.</p>
        <p><strong>Historia:</strong> La escultura de la ballena jorobada fue parte de una serie para concienciar sobre la conservacion de las especies marinas.</p>
      </div>
      <div class="audio-container">
        <audio id="audioPlayer" controls>
          <source id="audioSource" src="/audio/La_Ballena_Jorobada.mp3" type="audio/mp3">
          Tu navegador no soporta el elemento de audio.
        </audio>
      </div>
    </div>

    <!-- Segundo slide -->
    <div class="carousel-item">
      <div class="top-images">
        <div class="image-item left" onclick="changeImage('el-ancla')">
          <img src="/statues/el-ancla.webp" alt="Estatua del ancla" class="carousel-image" id="el-ancla">
        </div>
        <div class="image-item central" onclick="changeImage('el-ancla')">
          <img src="/statues/el-ancla.webp" alt="Estatua del ancla" class="carousel-image" id="el-ancla">
        </div>
        <div class="image-item right" onclick="changeImage('el-ancla')">
          <img src="/statues/el-ancla.webp" alt="Estatua del ancla" class="carousel-image" id="el-ancla">
        </div>
      </div>
      <div class="description">
        <h3>El Ancla</h3>
        <p><strong>Autor:</strong> Octavio González Gutiérrez</p>
        <p><strong>Material: </strong> Bronce</p>
        <p> <strong></strong>  2012</p>
        <p><strong>Descripcion:</strong> Escultura en bronce del ancla española tipo almirantazgo, representando la historia maritima de la region.</p>
        <p><strong>Historia:</strong> Fue inaugurada en 2012 como parte de un proyecto para preservar la historia naval en la region.</p>
      </div>
      <div class="audio-container">
        <audio id="audioPlayer" controls>
          <source id="audioSource" src="/audio/El_Ancla.mp3" type="audio/mp3">
          Tu navegador no soporta el elemento de audio.
        </audio>
      </div>
    </div>

    <!-- Más slides de estatuas aquí -->
  </div>

  <!-- Flechas para cambiar de imagen -->
  <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
  <button class="next" onclick="moveSlide(1)">&#10095;</button>
</div>

<script>
  let slideIndex = 0;
  const slides = document.getElementsByClassName("carousel-item");

  // Mostrar la siguiente imagen cuando se navega
  function showSlides() {
    for (let i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";  
    }

    slides[slideIndex].style.display = "block";
  }

  // Navegación con las flechas (prev y next)
  function moveSlide(step) {
    slideIndex += step; 
    if (slideIndex >= slides.length) slideIndex = 0; 
    if (slideIndex < 0) slideIndex = slides.length - 1; 

    showSlides();
  }

  // Función para poner la imagen en primer plano al hacer clic
  function changeImage(id) {
    const images = document.querySelectorAll('.carousel-image');
    images.forEach(img => {
      img.style.zIndex = '1';  // Reestablecer el zIndex a 1
      img.style.transform = 'scale(1)';  // Reestablecer el tamaño a su valor original
    });
    const activeImage = document.getElementById(id);
    activeImage.style.zIndex = '10'; // Poner la imagen seleccionada en primer plano
    activeImage.style.transform = 'scale(1.2)';  // Aumentar el tamaño de la imagen seleccionada
  }

  // Inicializar el carrusel mostrando la primera imagen al cargar
  setInterval(() => {
    moveSlide(1);  // Cambiar automáticamente a la siguiente imagen cada 5 segundos
  }, 5000);

  showSlides();  // Mostrar la primera imagen cuando la página carga
</script>
